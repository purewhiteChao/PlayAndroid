<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mywebview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.07"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorWhite"
        >
        <ImageView
            android:id="@+id/back_myvebview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_drawable"/>
        <TextView
            android:id="@+id/title_myvebview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="20dp"
            android:text="测试文字"/>
    </android.support.v7.widget.Toolbar>
    <ProgressBar
        android:id="@+id/progressbar_mywebview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.01"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_mywebview"
        android:max="100"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
    <WebView
        android:id="@+id/webview_mywebview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.92"
        app:layout_constraintBottom_toBottomOf="parent"></WebView>
</android.support.constraint.ConstraintLayout>