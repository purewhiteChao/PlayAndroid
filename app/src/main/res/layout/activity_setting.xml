<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.setting.SettingActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01D0FA"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/back_setting"
            android:src="@drawable/back_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#FFFFFF"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本设置"
        android:textColor="#EE504A"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#909090"></View>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间模式"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <com.suke.widget.SwitchButton
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_night_setting"/>
        </RelativeLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#909090"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无图模式"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <com.suke.widget.SwitchButton
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_nopic_setting"/>
        </RelativeLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#909090"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动缓存"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <com.suke.widget.SwitchButton
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_cache_setting"/>
        </RelativeLayout>


        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#909090"></View>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他设置"
        android:textColor="#EE504A"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#909090"></View>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/yijian_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="意见反馈"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#909090"></View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/cleancache_setting">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空缓存"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0K"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"/>
        </RelativeLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#909090"></View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/version_setting">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"/>
        </RelativeLayout>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#909090"></View>
    </LinearLayout>

</LinearLayout>